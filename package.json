{
  "name": "@salzpate/react-ui",
  "description": "React UI component library built with Tailwind CSS",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "version": "0.1.1",
  "license": "Apache 2.0",
  "author": "Ronny Krammer",
  "module": "dist/react-ui.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "NODE_ENV=production tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/react-ui.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-ui.esm.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "peerDependencies": {
    "classnames": "^2.3.1",
    "next": "^10.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.2.1"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.3.5"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@size-limit/preset-small-lib": "^4.10.2",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/classnames": "^2.2.11",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/storybook__react": "^5.2.1",
    "@types/styled-components": "^5.1.9",
    "babel-loader": "^8.2.2",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "next": "^10.2.0",
    "postcss-preset-env": "^6.7.0",
    "react-is": "^17.0.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.0",
    "size-limit": "^4.10.2",
    "styled-components": "^5.2.3",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "tailwindcss": "^2.1.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  }
}
