{
  "name": "@salzpate/react-ui",
  "description": "React UI component library built with Tailwind CSS",
  "main": "dist/cjs/index.js",
  "types": "dist/index.d.ts",
  "version": "1.0.1",
  "license": "Apache-2.0",
  "author": "Ronny Krammer",
  "repository": {
    "type": "git",
    "url": "https://github.com/salzpate/react-ui.git"
  },
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build-storybook": "storybook build",
    "build": "npm run esbuild",
    "esbuild": "rm -rf dist && NODE_ENV=production node ./esbuild.mjs && tsc --emitDeclarationOnly --outDir dist",
    "lint": "eslint --ext tsx --ext ts src && tsc --noEmit",
    "test": "jest --config=jest.config.js",
    "storybook": "storybook dev -p 6006"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint --ext tsx --ext ts src && tsc --noEmit"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "peerDependencies": {
    "next": "^13.0.0"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.46.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@salzpate/eslint-config": "^3.0.1",
    "@storybook/addon-actions": "^7.4.3",
    "@storybook/addon-essentials": "^7.4.3",
    "@storybook/addon-links": "^7.4.3",
    "@storybook/addon-styling-webpack": "^0.0.4",
    "@storybook/react": "^7.4.3",
    "@storybook/react-webpack5": "^7.4.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/styled-components": "^5.1.27",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.19.3",
    "esbuild-node-externals": "^1.9.0",
    "esbuild-plugin-svgr": "^2.1.0",
    "eslint": "^8.49.0",
    "eslint-config-next": "^13.5.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.6.4",
    "next": "^13.5.2",
    "postcss": "^8.4.30",
    "postcss-preset-env": "^9.1.4",
    "prettier": "^3.0.3",
    "react-is": "^18.2.0",
    "storybook": "^7.4.3",
    "style-loader": "^3.3.3",
    "styled-components": "^6.0.8",
    "stylelint": "^15.10.3",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^4.0.2",
    "tailwindcss": "^3.3.3",
    "tmp": "^0.2.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  }
}
