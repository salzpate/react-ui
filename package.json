{
  "name": "@salzpate/react-ui",
  "description": "React UI component library built with Tailwind CSS",
  "types": "dist/index.d.ts",
  "main": "dist/react-ui.umd.js",
  "version": "1.3.0",
  "license": "Apache-2.0",
  "author": "Ronny Krammer",
  "repository": {
    "type": "git",
    "url": "https://github.com/salzpate/react-ui.git"
  },
  "module": "dist/react-ui.mjs",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc && vite build && npx @tailwindcss/cli -i ./styles/globals.css -o ./dist/style.css --minify",
    "build-storybook": "storybook build",
    "esbuild": "rm -rf dist && NODE_ENV=production node ./esbuild.mjs && tsc --emitDeclarationOnly --outDir dist",
    "lint": "eslint src && tsc --noEmit",
    "lint:style": "npx stylelint '**/*.css' --fix",
    "prettier": "npx prettier --write .",
    "storybook": "storybook dev -p 6006",
    "test": "vitest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint src && tsc --noEmit"
    }
  },
  "peerDependencies": {
    "classnames": "^2.5.1",
    "next": "^16.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "lucide-react": "^0.548.0",
    "react-hook-form": "^7.65.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@storybook/addon-docs": "^9.1.15",
    "@storybook/nextjs": "^9.1.15",
    "@storybook/nextjs-vite": "^9.1.15",
    "@tailwindcss/cli": "^4.1.16",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/vite": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.18.12",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "^9.1.15",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "next": "^16.0.0",
    "postcss": "^8.5.6",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^10.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "storybook": "^9.1.15",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.4"
  },
  "optionalDependencies": {
    "@parcel/watcher-linux-x64-glibc": "^2.5.1",
    "@rollup/rollup-linux-x64-gnu": "^4.52.5"
  }
}
