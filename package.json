{
  "name": "@salzpate/react-ui",
  "description": "React UI component library built with Tailwind CSS",
  "main": "dist/react-ui.umd.js",
  "types": "dist/index.d.ts",
  "version": "1.1.11",
  "license": "Apache-2.0",
  "author": "Ronny Krammer",
  "repository": {
    "type": "git",
    "url": "https://github.com/salzpate/react-ui.git"
  },
  "module": "dist/react-ui.mjs",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc && vite build",
    "build-storybook": "storybook build",
    "esbuild": "rm -rf dist && NODE_ENV=production node ./esbuild.mjs && tsc --emitDeclarationOnly --outDir dist",
    "lint": "eslint src && tsc --noEmit",
    "lint:style": "npx stylelint '**/*.css' --fix",
    "prettier": "npx prettier --write **/**/*.tsx",
    "storybook": "storybook dev -p 6006",
    "test": "vitest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint src && tsc --noEmit"
    }
  },
  "peerDependencies": {
    "classnames": "^2.5.1",
    "next": "^15.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "lucide-react": "^0.475.0",
    "react-hook-form": "^7.54.2"
  },
  "devDependencies": {
    "@eslint/css": "^0.3.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@storybook/addon-essentials": "^8.5.6",
    "@storybook/addon-interactions": "^8.5.6",
    "@storybook/addon-links": "^8.5.6",
    "@storybook/addon-themes": "^8.5.6",
    "@storybook/react": "^8.5.6",
    "@storybook/react-vite": "^8.5.6",
    "@tailwindcss/postcss": "^4.0.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.6",
    "@vitest/ui": "^3.0.6",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.20.1",
    "eslint-config-next": "^15.1.7",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "next": "^15.1.7",
    "postcss": "^8.5.3",
    "postcss-flexbugs-fixes": "^5.0.2",
